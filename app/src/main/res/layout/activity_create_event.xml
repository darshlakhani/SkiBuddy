<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context=".CreateEvent">
   <!-- <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"/> -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tEventName"
        android:layout_width="match_parent"
        android:textColorHint="#003380"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etEventName"
        android:textColor="#003d99"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
        android:textColorHint="#003380"

    android:hint="@string/event_name"
        android:inputType="text"
        />
</android.support.design.widget.TextInputLayout>
   <!-- <TextView
        android:id="@+id/tvEventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEventName"
        android:text="Event Description"/> -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tEventDescription"
        android:layout_width="match_parent"
        android:layout_below="@+id/tEventName"
        android:textColorHint="#003380"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etEventDescription"
        android:textColor="#003d99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:hint="@string/event_description"
        android:inputType="textLongMessage"
        />
 </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tEventDate"
        android:layout_width="match_parent"
        android:layout_below="@+id/tEventDescription"
        android:textColorHint="#003380"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#003d99"
        android:hint="@string/event_date"
        android:inputType="date"
        />
</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tEventStartTime"
        android:layout_width="match_parent"
        android:layout_below="@+id/tEventDate"
        android:textColorHint="#003380"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etEventStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventStartTime"
        android:hint="@string/start_time"
        android:textColor="#003d99"
        android:inputType="time"
        />

</android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tEventEndTime"
        android:layout_width="match_parent"
        android:layout_below="@+id/tEventStartTime"
        android:textColorHint="#003380"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/etEventEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:hint="@string/end_time"
        android:textColor="#003d99"
        android:inputType="time"
        />

</android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tEventEndTime"
        android:id="@+id/btCreateEventButton"
        android:text="Save"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
